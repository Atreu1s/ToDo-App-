{
  "name": "my-todo-app",
  "version": "1.0.0",
  "private": true,
  "description": "ToDo приложение",
  "license": "MIT",
  "keywords": ["todo", "task-manager", "productivity", "electron", "react-native"],
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/ToDo-app.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "cross-env NODE_ENV=development turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "rimraf node_modules packages/*/node_modules apps/*/node_modules",
    "clean:hard": "rimraf node_modules packages/*/node_modules apps/*/node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "cross-env": "^7.0.3"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}